{
  "expo": {
    "name": "Presence",
    "slug": "presence",
    "owner": "maous1",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "presence",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.presence.nutrition",
      "buildNumber": "3",
      "associatedDomains": [
        "applinks:lym1-production.up.railway.app"
      ],
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.access": []
      },
      "infoPlist": {
        "NSCameraUsageDescription": "Presence utilise la caméra pour scanner les aliments et codes-barres.",
        "NSPhotoLibraryUsageDescription": "Presence accède à vos photos pour analyser les repas.",
        "NSHealthShareUsageDescription": "LYM utilise vos données de santé pour synchroniser vos pas et activités.",
        "NSHealthUpdateUsageDescription": "LYM peut enregistrer vos données nutritionnelles dans Apple Santé.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.798753543413-fr199m16nt69199iba06trtj47mp9llu"
            ]
          }
        ]
      }
    },
    "android": {
      "package": "com.presence.nutrition",
      "versionCode": 13,
      "minSdkVersion": 26,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "VIBRATE",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "presence"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "lym1-production.up.railway.app",
              "pathPrefix": "/auth"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "plugins": [
      "expo-camera",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#0077B6"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 26
          }
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "LYM utilise le microphone pour la saisie vocale de vos repas.",
          "speechRecognitionPermission": "LYM utilise la reconnaissance vocale pour décrire vos repas."
        }
      ],
      "react-native-health-connect",
      "./plugins/withHealthConnect.js",
      "@react-native-google-signin/google-signin"
    ],
    "extra": {
      "eas": {
        "projectId": "d22ac2c1-1cd1-4437-aa28-3c1c7ebfdef9"
      }
    }
  }
}
